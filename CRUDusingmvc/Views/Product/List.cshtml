@model CRUDusingmvc.DAL.Product

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>
<p>
    @Html.ActionLink("Add Product","Create","Product")
</p>
<table class=table table-bordered>
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    @foreach (CRUDusingmvc.DAL.Product item in ViewBag.ProductList)
    {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.price</td>
                <td>
                @Html.ActionLink("Edit","Edit",new{@id=item.Id})
                @Html.ActionLink("Delete","Delete",new{@id=item.Id})
                @Html.ActionLink("View","View",new{@id=item.Id})
                </td>
            </tr>
    }
</table>